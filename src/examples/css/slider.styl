//------------------------------------
//  Slider
//------------------------------------

.slider
  position relative
  width 100%
  height 100%
  overflow hidden

  .slideContainer
    height 100%

  .debug
    position absolute
    bottom 0
    left 0
    background rgba(0,0,0,0.6)
    color #fff
    padding 12px
    font-size 14px

    span
      display block
      margin 12px 0

  ul
    padding 0
    margin 0
    height 100%

    li
      display none
      width 100%
      height 100%
      float left
      list-style-type none

      background-size cover
      background-repeat no-repeat
      background-position center center

      &:first-child
        display: block

      // if the elements should also have some margin/padding
      // then another wrap is needed and the background images
      // have to be placed on these additional elements
      .inner
        height 100%

        background-size cover
        background-repeat no-repeat
        background-position center center


  span.prev,
  span.next
    display block
    width 64px
    height 64px
    position absolute
    top 50%
    margin-top -32px
    left 12px
    cursor pointer
    font-size 64px
    color #fff

  span.next
    left auto
    right 12px
    text-align right

  ul.sliderNavigation
    position absolute
    bottom 12px
    left 50%
    height auto
    list-style-type none
    margin 0
    padding 0

    li
      display inline-block
      width auto
      padding 12px
      margin 0
      cursor pointer
      color #fff

      &.active
        color red

